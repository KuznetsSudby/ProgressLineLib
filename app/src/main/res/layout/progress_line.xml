<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:id="@id/firstBlock"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/firstText"
            android:text="@string/empty"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>

    <team.fastflow.kusu.ui.Views.Line
        android:id="@id/progress"
        android:layout_alignTop="@id/firstBlock"
        android:layout_alignBottom="@id/secondBlock"
        android:layout_toRightOf="@id/firstBlock"
        android:layout_toLeftOf="@id/secondBlock"
        style="@style/canvas" />

    <LinearLayout
        android:background="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/secondBlock"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/secondText"
            android:text="@string/empty"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>
</RelativeLayout>